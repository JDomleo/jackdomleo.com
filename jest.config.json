{
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1",
    "^~/(.*)$": "<rootDir>/$1",
    "^vue$": "vue/dist/vue.common.js"
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "vue",
    "json"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest",
    "^.+\\.js$": "babel-jest",
    ".*\\.(vue)$": "vue-jest"
  },
  "setupFiles": [
    "./tests/unit/setup-jest.ts"
  ],
  "snapshotSerializers": [
    "jest-serializer-vue"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/components/**/*.{js,ts,vue}",
    "<rootDir>/layouts/**/*.{js,ts,vue}",
    "<rootDir>/middleware/**/*.{js,ts,vue}",
    "<rootDir>/pages/**/*.{js,ts,vue}"
  ],
  "reporters": [
    "default",
    [
      "jest-stare",
      {
        "resultDir": "results/jest-stare",
        "reportTitle": "jackdomleo.dev unit tests report",
        "coverageLink": "../../coverage/lcov-report/index.html",
        "jestStareConfigJson": "jest-stare.json",
        "jestGlobalConfigJson": "globalStuff.json"
      }
    ]
  ]
}
